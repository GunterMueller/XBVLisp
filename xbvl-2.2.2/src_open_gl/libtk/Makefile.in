########################################################################

CFLAGS = -w @CFLAGS@
LDFLAGS =

########################################################################

SHELL = /bin/sh
CC = @CC@
CPP = @CPP@

srcdir = @srcdir@
top_srcdir = @top_srcdir@
srcincdir = $(top_srcdir)/include 
locallibdir = @prefix@
FONTLIB = $(locallibdir)/lib/xbvlisp/fonts

VPATH = @srcdir@

LFLAGS = @CPPFLAGS@
CPPFLAGS = @CPPFLAGS@ 
DEFS = @DEFS@ @OPEN_GL@ @TIFF_DEF@
SYS_CFLAGS = @SYS_CFLAGS@

X_CFLAGS = @X_CFLAGS@ 

ALL_CFLAGS = $(SYS_CFLAGS) $(X_CFLAGS) $(CFLAGS)

SRC  = font.c     image.c    tk.c
OBJS = font.o     image.o    tk.o 

.c.o:
	$(CC) $(CPPFLAGS) $(ALL_CFLAGS) -c $<

all: $(OBJS)

clean:
	rm -f *~ *.o 